<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="syslog">D://elk/syslog/syslog</Property>
	</Properties>
  	<Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
   
    <RollingFile name="SyslogFile" fileName="${syslog}.log" filePattern="${syslog}-%d{yyyy-MM-dd}-%i.log" >
		<PatternLayout>
			<pattern>%d{dd/MMM/yyyy HH:mm:ss,SSS}- %c{1}: %m%n</pattern>
		</PatternLayout>
		<Policies>
			<SizeBasedTriggeringPolicy size="1 MB" />
		</Policies>
		<DefaultRolloverStrategy max="4"/>
	</RollingFile>
 
     <RollingFile name="TdrFile" fileName="${tdrlog}.log" filePattern="${tdrlog}-%d{yyyy-MM-dd}.log.gz"  ignoreExceptions="false">
      <PatternLayout>
       	<pattern>%d{yyyy-MM-dd HH:mm:ss,SSS}|%t|%5p|%m%n</pattern>
		
      </PatternLayout>
      <TimeBasedTriggeringPolicy />
    </RollingFile>
     <Async name="Syslog">
      <AppenderRef ref="SyslogFile"/>
    </Async> 
  </Appenders>
  <Loggers>
  	 <Root level="TRACE">
      <AppenderRef ref="Console"/>
    </Root> 
    <logger name="tsel.proxy.api.Log" level="TRACE" additivity="false">
  		<AppenderRef ref="Syslog"/>
  	</logger>
  
  </Loggers>
</Configuration>